@model IEnumerable<Employee.Models.SearchEmployee_Result>
@{ ViewData["Title"] = "Home";}
<h2>Search Employees</h2>
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
<table class="table-sm">
    <tr><td>Last Name:</td> <td>@Html.TextBox("lastName")</td></tr>
    <tr><td>First Name:</td><td> @Html.TextBox("firstName")</td></tr>
    <tr>
        <td>Department:</td>
        <td>@Html.DropDownList("departmentId", (IEnumerable<SelectListItem>)ViewData["deptList"], "Please select", new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>Sub-Department:</td>
        <td>@Html.DropDownList("subDepartmentId", (IEnumerable<SelectListItem>)ViewData["subDeptList"], "Please select", new { @class = "form-control" })</td>
    </tr>
</table>
    <input type="submit" name="submit" value="Search" />
    <br />
}
<br />

<table class="table-striped table-bordered">
    <tr>
        <th>
            Profile Image
        </th>
        <th>
            Name
        </th>
        <th>
            Bio
        </th>
        <th>
            Department
        </th>
        <th>
            Sub-Department
        </th>
        <th>
            Profile Links
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ProfileImage)" alt="@Html.DisplayFor(modelItem => item.ProfileImage)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubDepartmentName)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.FbProfileLink)"><img src="~/fb_logo.png" alt="Facebook" width="20"/></a>
                <a href="@Html.DisplayFor(modelItem => item.TwitterProfileLink)"><img src="~/twitter_logo.png" alt="Twitter" width="25"/></a>
            </td>
        </tr>
    }

</table>
